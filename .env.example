# ChatVault Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# REQUIRED SETTINGS
# ==========================================

# ChatVault API Key - Required for authentication
# Generate a secure random key for production use
CHATVAULT_API_KEY=your_secure_chatvault_api_key_here

# ==========================================
# LLM PROVIDER API KEYS (Optional)
# ==========================================

# Anthropic Claude API Key
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# DeepSeek API Key
# Get from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# OpenAI API Key (optional, for compatibility)
# Get from: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# ==========================================
# OLLAMA CONFIGURATION
# ==========================================

# Ollama base URL (default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# Ollama request timeout in seconds
OLLAMA_TIMEOUT=120

# ==========================================
# SERVER CONFIGURATION
# ==========================================

# Server host (use 0.0.0.0 for external access)
HOST=localhost

# Server port
PORT=4000

# Debug mode (set to false for production)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# Database URL (SQLite recommended for single-user)
DATABASE_URL=sqlite:///./chatvault.db

# Enable SQL echoing (set to true for debugging)
ECHO_SQL=false

# ==========================================
# SECURITY & PERFORMANCE
# ==========================================

# Enable authentication (set to false for testing only)
AUTH_REQUIRED=true

# CORS origins (comma-separated list)
CORS_ORIGINS=*

# Rate limiting: requests per window
RATE_LIMIT_REQUESTS=100

# Rate limiting: time window in seconds
RATE_LIMIT_WINDOW=60

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout in seconds
REQUEST_TIMEOUT=300

# ==========================================
# USAGE TRACKING
# ==========================================

# Enable usage logging to database
ENABLE_USAGE_LOGGING=true

# Enable cost calculation
ENABLE_COST_CALCULATION=true

# ==========================================
# LITELLM CONFIGURATION
# ==========================================

# Path to LiteLLM configuration file
LITELLM_CONFIG_PATH=config.yaml